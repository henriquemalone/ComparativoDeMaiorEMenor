<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_green_dark"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="359dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        app:srcCompat="@drawable/logo"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/editAlcoolId"
        android:layout_marginTop="175dp"
        android:text="Preço Alcool"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="157dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editGasolinaId"
        android:layout_alignTop="@+id/textView"
        android:text="Preço Gasolina"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="157dp" />

    <EditText
        android:id="@+id/editAlcoolId"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/botaoVerifica"
        android:layout_marginTop="202dp"
        android:background="?attr/colorBackgroundFloating"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="61dp"
        tools:layout_editor_absoluteY="176dp" />

    <EditText
        android:id="@+id/editGasolinaId"
        android:layout_width="92dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/botaoVerifica"
        android:layout_alignTop="@+id/editAlcoolId"
        android:background="@android:color/background_light"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="232dp"
        tools:layout_editor_absoluteY="176dp" />

    <Button
        android:id="@+id/botaoVerifica"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="191dp"
        android:text="@string/botao_Verificar"
        tools:layout_editor_absoluteX="59dp"
        tools:layout_editor_absoluteY="257dp" />

    <TextView
        android:id="@+id/textoResultadoId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="119dp"
        android:background="@android:color/holo_green_light"
        android:textSize="@dimen/texto_Resultado"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="192dp"
        tools:layout_editor_absoluteY="363dp" />
</RelativeLayout>